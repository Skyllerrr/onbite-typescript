{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "outDir": "dist",
      "strict": true,
      "strictNullChecks": false, // 엄격한 Null 검사 
      // (false : 어느 타입이든 변수에 null값을 넣어도 허용하겠다는 뜻)
      "moduleDetection": "force",
      "skipLibCheck": true
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src"]
}